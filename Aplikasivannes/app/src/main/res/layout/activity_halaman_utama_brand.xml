<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Halaman_Utama_Brand">
           <LinearLayout
               android:padding="10dp"
               android:background="#009688"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <TextView
                       android:id="@+id/tvNAMABRAND"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="NIP"
                       android:visibility="gone"
                       tools:ignore="MissingConstraints" />

                   <ImageView
                       android:id="@+id/foto_profil"
                       android:layout_width="40dp"
                       android:layout_height="39dp"
                       android:background="@drawable/bundaranfoto"
                       android:clipToOutline="true"
                       android:scaleType="center"
                       app:srcCompat="@drawable/user"
                       tools:ignore="MissingConstraints" />

                   <TextView
                       android:id="@+id/tvNama_Brand"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="16dp"
                       android:text="Anita"
                       android:textColor="@color/white"
                       android:textSize="20dp"
                       android:textStyle="bold"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintStart_toEndOf="@+id/foto_profil"
                       app:layout_constraintTop_toTopOf="parent"
                       tools:ignore="MissingConstraints" />

                   <ImageView
                       android:id="@+id/buttonnotifikasi"
                       android:layout_width="36dp"
                       android:layout_height="39dp"
                       android:layout_gravity="end"
                       app:layout_constraintEnd_toStartOf="@+id/buttonlogout"
                       app:layout_constraintHorizontal_bias="0.708"
                       app:layout_constraintStart_toEndOf="@+id/tvNama_Brand"
                       app:srcCompat="@drawable/icon_bell"
                       tools:ignore="MissingConstraints"
                       tools:layout_editor_absoluteY="3dp" />

                   <ImageView
                       android:id="@+id/buttonlogout"
                       android:layout_width="36dp"
                       android:layout_height="39dp"
                       android:layout_gravity="end"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintHorizontal_bias="0.988"
                       app:layout_constraintStart_toEndOf="@+id/tvNama_Brand"
                       app:srcCompat="@drawable/iconlogout"
                       tools:ignore="MissingConstraints"
                       tools:layout_editor_absoluteY="3dp" />

               </androidx.constraintlayout.widget.ConstraintLayout>

           </LinearLayout>
    <LinearLayout
        android:background="#FFC107"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/konten"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="64dp">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#009688"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu_bawah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        />
        </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>