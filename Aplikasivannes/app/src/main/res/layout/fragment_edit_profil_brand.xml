<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_tambah_project_brand">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0B3935"
        android:padding="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tombol_kembali"
                android:src="@drawable/icon_tombol_kembali"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:paddingRight="40dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profil"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:paddingBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Foto Profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Foto Profil Lama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Foto Profil Baru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="30dp"
                    android:src="@drawable/ic_baseline_file_upload_24"
                    android:id="@+id/ivFoto_ProfilLama"
                    android:background="@drawable/rounded_kotak_input_tambah_data_orangtuadananak"
                    android:layout_width="150dp"
                    android:layout_height="200dp"/>
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:padding="30dp"
                    android:src="@drawable/ic_baseline_file_upload_24"
                    android:id="@+id/ivFoto_ProfilBaru"
                    android:background="@drawable/rounded_kotak_input_tambah_data_orangtuadananak"
                    android:layout_width="150dp"
                    android:layout_height="200dp"/>
            </LinearLayout>

            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:text="Nama Brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="15dp"
                android:hint="Masukan Nama Brand"
                android:padding="5dp"
                android:id="@+id/etNama_Brand"
                android:background="@drawable/rounded_kotak_input_tambah_data_orangtuadananak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:text="Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="15dp"
                android:hint="Masukan Username"
                android:padding="5dp"
                android:id="@+id/etUsername"
                android:background="@drawable/rounded_kotak_input_tambah_data_orangtuadananak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:text="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="15dp"
                android:hint="Masukan Password"
                android:padding="5dp"
                android:id="@+id/etPassword"
                android:background="@drawable/rounded_kotak_input_tambah_data_orangtuadananak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="15dp"
                android:hint="Masukan Email"
                android:padding="5dp"
                android:id="@+id/etEmail"
                android:background="@drawable/rounded_kotak_input_tambah_data_orangtuadananak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:text="Nomor Telepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="15dp"
                android:hint="Masukan Nomor Telepon"
                android:padding="5dp"
                android:id="@+id/etNomor_Telepon"
                android:background="@drawable/rounded_kotak_input_tambah_data_orangtuadananak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnbatal"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_tombol_batal_simpan_data_anak"
                    android:text="Batal"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btnsimpan"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_tombol_simpan_data_anak"
                    android:text="Simpan"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>