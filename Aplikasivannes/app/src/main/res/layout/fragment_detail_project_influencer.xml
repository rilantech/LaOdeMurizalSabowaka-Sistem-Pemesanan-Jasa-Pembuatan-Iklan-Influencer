<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_tambah_project_brand"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0B3935"
        android:padding="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tombol_kembali"
                android:src="@drawable/icon_tombol_kembali"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:paddingRight="40dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail Project"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:paddingBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvNama_Project"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Nama Project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_file_upload_24"
                android:id="@+id/ivLogo_Brand"
                android:background="@drawable/rounded_kotak_input_tambah_data_orangtuadananak"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tvGaji_Influencer"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="Nama Project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvNama_Brand"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="10dp"
                android:layout_marginBottom="10dp"
                android:text="Nama Project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvlama_kontrak"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:text="Lama Kontrak:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="#D6D3D3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:text="Keterangan:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvKriteria_Project"
                android:textStyle="bold"
                android:textSize="10dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="3dp"
                android:text="Kriteria:"
                android:justificationMode="inter_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:id="@+id/btnKerjakan"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:padding="5dp"
                android:drawableRight="@drawable/ic_baseline_input_24"
                android:background="@drawable/efek_klik_rounded_btnlogin"
                android:text="Kerjakan"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>